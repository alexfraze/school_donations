<p id="notice"><%= notice %></p>

<h1>Approvals</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Donation</th>
      <th>Status</th>
      <th>Notes</th>
      <th>Version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @approvals.each do |approval| %>
      <tr>
        <td><%= approval.teacher_id %></td>
        <td><%= approval.donation_id %></td>
        <td><%= approval.status %></td>
        <td><%= approval.notes %></td>
        <td><%= approval.version %></td>
        <td><%= link_to 'Show', approval %></td>
        <td><%= link_to 'Edit', edit_approval_path(approval) %></td>
        <td><%= link_to 'Destroy', approval, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Approval', new_approval_path %>
