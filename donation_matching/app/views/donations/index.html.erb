<p id="notice"><%= notice %></p>

<h1>Donations</h1>

<table>
  <thead>
    <tr>
      <th>Parent</th>
      <th>Donation date</th>
      <th>Teacher</th>
      <th>Status</th>
      <th>Amount</th>
      <th>Notes</th>
      <th>Version</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.parent_id %></td>
        <td><%= donation.donation_date %></td>
        <td><%= donation.teacher_id %></td>
        <td><%= donation.status %></td>
        <td><%= donation.amount %></td>
        <td><%= donation.notes %></td>
        <td><%= donation.version %></td>
        <td><%= link_to 'Show', donation %></td>
        <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
        <td><%= link_to 'Destroy', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

